<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <% task.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>  
  <% end %>
  
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  
  <%= f.submit '投稿' %>
<% end %>
