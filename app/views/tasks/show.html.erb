<h1>id: <%= @task.id %> のタスク詳細ページ</h1>
<div class="row">
  <div class="col-6">
    <table class="table table-bordered">
      <tr>
        <th>id</th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th>タスク</th>
        <td><%= @task.content %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
      </tr>
</table>
</div>
</div>

<%= link_to "編集",edit_task_path(@task),class: "btn btn-primary" %>
<%= link_to "削除",@task,method: :delete ,class: "btn btn-danger",data: { confirm: '本当に削除してよろしいですか？' } %>
<%= link_to "一覧へ戻る",tasks_path ,class: "btn btn-info" %>