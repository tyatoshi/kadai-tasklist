<h1>新規作成</h1>

<div class="row">
  <div class="col-6">
    <%= form_with(model:@user, local: true) do |f| %>
    
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %> 
          </ul>
        </div>
      <% end %>
      
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-center"><%='name' %></label>
        <div class=" col-sm-9">
          <%= f.text_field :name ,class: "form-control"%>
        </div>
      </div>    
      
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-center"><%='E-mail' %></label>
        <div class=" col-sm-9">
          <%= f.text_field :email ,class: "form-control"%>
        </div>
      </div>  
  
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-center"><%='PassWord' %></label>
        <div class=" col-sm-9">
          <%= f.text_field :password ,class: "form-control" ,type:"password"%>
        </div>
    </div>
    
    <div class="form-group row">
      <label class="col-sm-3 col-form-label text-center"><%='Confirmation' %></label>
        <div class=" col-sm-9">
          <%= f.text_field :password_confirmation ,class: "form-control" ,type:"password"%>
        </div>
    </div>
    
      <%= f.submit '作成',class: 'btn btn-primary' %>
      
    <% end %>
    <%= link_to("戻る","/login", class:'btn btn-success mt-2') %>
  </div>
</div>